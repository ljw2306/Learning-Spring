<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.naver.msg">
	<insert id="insert">
		insert into msg0 values (#{mid}, #{sender}, #{receiver})
	</insert>
	
	<update id="updatePoint">
		update user0 set point = point + 1 where id = #{id}
	</update>
	
</mapper>